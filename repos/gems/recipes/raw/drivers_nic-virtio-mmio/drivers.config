<config>
	<parent-provides>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="ROM"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
		<service name="IRQ"/>
		<service name="Timer"/>
	</parent-provides>

	<default caps="100"/>

	<service name="Nic">
		<default-policy> <child name="virtio_nic"/> </default-policy> </service>

	<start name="virt_platform_drv">
		<resource name="RAM" quantum="2M"/>
		<provides> <service name="ROM"/> </provides>
		<route>
			<service name="CPU">    <parent/> </service>
			<service name="IO_MEM"> <parent/> </service>
			<service name="LOG">    <parent/> </service>
			<service name="PD">     <parent/> </service>
			<service name="ROM">    <parent/> </service>
		</route>
	</start>

	<start name="virtio_mmio">
		<resource name="RAM" quantum="2M"/>
		<provides> <service name="VirtIO"/> </provides>
		<route>
			<service name="ROM" label="platform.dtb">
				<child name="virt_platform_drv" />
			</service>
			<service name="CPU">    <parent/> </service>
			<service name="IO_MEM"> <parent/> </service>
			<service name="IRQ">    <parent/> </service>
			<service name="LOG">    <parent/> </service>
			<service name="PD">     <parent/> </service>
			<service name="ROM">    <parent/> </service>
		</route>
		<config>
			<policy label_prefix="virtio_nic">
				<device type="nic" />
			</policy>
		</config>
	</start>

	<start name="virtio_nic">
		<resource name="RAM" quantum="640K"/>
		<provides> <service name="Nic"/> </provides>
		<config/>
		<route>
			<service name="VirtIO"> <child name="virtio_mmio"/> </service>
			<service name="CPU">    <parent/> </service>
			<service name="LOG">    <parent/> </service>
			<service name="PD">     <parent/> </service>
			<service name="ROM">    <parent/> </service>
		</route>
	</start>

</config>
